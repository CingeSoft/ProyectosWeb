@page
@model CingeRazor.Pages.Articulo.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Modificar Registro</h2>

<h4>Articulos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <script>
                function CalcularPrecioVenta() {
                    document.getElementById('PrecioVenta').value = parseFloat(document.getElementById('CostoPromedio').value) * (1 + parseFloat(document.getElementById('MargenUtilidad').value / 100));
                    //(Costo * (1 + MargenUtilidad / 100))
                }
            </script>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Articulos.Código" />
            <div class="form-group">
                <label asp-for="Articulos.Nombre" class="control-label"></label>
                <input asp-for="Articulos.Nombre" class="form-control" />
                <span asp-validation-for="Articulos.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articulos.TipoArticulo" class="control-label"></label>
                <select asp-for="Articulos.TipoArticulo" class="form-control" asp-items="ViewBag.TipoArticulo"></select>
                <span asp-validation-for="Articulos.TipoArticulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articulos.CódigoUnidad" class="control-label"></label>
                <select asp-for="Articulos.CódigoUnidad" class="form-control" asp-items="ViewBag.CódigoUnidad"></select>
                <span asp-validation-for="Articulos.CódigoUnidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Articulos.CostoPromedio" class="control-label"></label>
        <input asp-for="Articulos.CostoPromedio" class="form-control" />
        <span asp-validation-for="Articulos.CostoPromedio" class="text-danger"></span>*@
                <label asp-for="Articulos.CostoPromedio" class="control-label"></label>
                <input asp-for="Articulos.CostoPromedio" onkeyup="CalcularPrecioVenta();" id="CostoPromedio" class="form-control" maxlength="20" required type="number">
                <span asp-validation-for="Articulos.CostoPromedio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articulos.MargenUtilida" class="control-label"></label>
                <input asp-for="Articulos.MargenUtilida" onkeyup="CalcularPrecioVenta();" id="MargenUtilidad" class="form-control" maxlength="20" required type="number">
                @* <input asp-for="Articulos.MargenUtilida" class="form-control" maxlength="20" required type="number" />*@
                <span asp-validation-for="Articulos.MargenUtilida" class="text-danger"></span>
                @*<label asp-for="Articulos.MargenUtilida" class="control-label"></label>
        <input asp-for="Articulos.MargenUtilida" class="form-control" />
        <span asp-validation-for="Articulos.MargenUtilida" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Articulos.PrecioVenta" class="control-label"></label>
                <input asp-for="Articulos.PrecioVenta" id="PrecioVenta" class="form-control" maxlength="20" required type="number">
                @*<input asp-for="Articulos.PrecioVenta" class="form-control" maxlength="20" required type="number" />*@
                <span asp-validation-for="Articulos.PrecioVenta" class="text-danger"></span>
                @*<label asp-for="Articulos.PrecioVenta" class="control-label"></label>
        <input asp-for="Articulos.PrecioVenta" class="form-control" />
        <span asp-validation-for="Articulos.PrecioVenta" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Articulos.PagaImpuesto" /> @Html.DisplayNameFor(model => model.Articulos.PagaImpuesto)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Articulos.FechaCreacíon" class="control-label"></label>
                <input asp-for="Articulos.FechaCreacíon" class="form-control" readonly />
                <span asp-validation-for="Articulos.FechaCreacíon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
