@page
@model CingeRazor.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Modificar Registro</h2>

<h4>Roles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Roles.IdRol" />
            <div class="form-group">
                <label asp-for="Roles.NombreRol" class="control-label"></label>
                <input asp-for="Roles.NombreRol" class="form-control" />
                <span asp-validation-for="Roles.NombreRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
