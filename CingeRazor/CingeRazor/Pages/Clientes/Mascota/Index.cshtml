@page
@model CingeRazor.Pages.Mascota.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 align="center">Mascotas</h1>
<hr border-style:inset />

<p>
    <a asp-page="Create">Crear Mascota</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mascotas[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mascotas[0].Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mascotas[0].Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mascotas[0].Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mascotas[0].Especie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mascotas[0].CódigoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Mascotas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CódigoNavigation.Código)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CódigoMascota">Modificar</a> |
                    <a asp-page="./Details" asp-route-id="@item.CódigoMascota">Detalles</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CódigoMascota">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
