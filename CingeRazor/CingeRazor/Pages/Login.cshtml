@page
@model CingeRazor.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Inicio de sesión";
}

<h2>Inicio de sesión</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="loginData.Username" class="control-label"></label>
                <input asp-for="loginData.Username" class="form-control" value="" />
            </div>
            <div class="form-group">
                <label asp-for="loginData.Password" class="control-label"></label>
                <input asp-for="loginData.Password" class="form-control" value="" />
            </div>
            <div class="form-group">
                <label asp-for="loginData.RememberMe" class="control-label"></label>
                <input asp-for="loginData.RememberMe" type="checkbox" />
            </div>
            <input type="submit" value="Iniciar sesión" />
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>