@page
@model CingeRazor.Pages.Mascota.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Modificar</h2>

<h4>Mascotas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mascotas.CódigoMascota" />
            <div class="form-group">
                <label asp-for="Mascotas.Nombre" class="control-label"></label>
                <input asp-for="Mascotas.Nombre" class="form-control" />
                <span asp-validation-for="Mascotas.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Peso" class="control-label"></label>
                <input asp-for="Mascotas.Peso" class="form-control" />
                <span asp-validation-for="Mascotas.Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Sexo" class="control-label"></label>
                <input asp-for="Mascotas.Sexo" class="form-control" />
                <span asp-validation-for="Mascotas.Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Edad" class="control-label"></label>
                <input asp-for="Mascotas.Edad" class="form-control" />
                <span asp-validation-for="Mascotas.Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Especie" class="control-label"></label>
                <input asp-for="Mascotas.Especie" class="form-control" />
                <span asp-validation-for="Mascotas.Especie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Código" class="control-label"></label>
                <select asp-for="Mascotas.Código" class="form-control" asp-items="ViewBag.Código"></select>
                <span asp-validation-for="Mascotas.Código" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
