@page
@model CingeRazor.Pages.Mascota.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear Registro</h2>

<h4>Mascotas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mascotas.CódigoMascota" class="control-label"></label>
                <input asp-for="Mascotas.CódigoMascota" class="form-control" maxlength="20"required />
                <span asp-validation-for="Mascotas.CódigoMascota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Nombre" class="control-label"></label>
                <input asp-for="Mascotas.Nombre" class="form-control" maxlength="200"required/>
                <span asp-validation-for="Mascotas.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Peso" class="control-label"></label>
                <input asp-for="Mascotas.Peso" class="form-control"maxlength="18"required type="number"/>
                <span asp-validation-for="Mascotas.Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Sexo" class="control-label"></label>
                <select asp-for="Mascotas.Sexo"class="form-control">
                    <option>Macho</option>
                    <option>Hembra</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Edad" class="control-label"></label>
                <input asp-for="Mascotas.Edad" class="form-control" maxlength="18"required type="number"/>
                <span asp-validation-for="Mascotas.Edad" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="Mascotas.Especie" class="control-label"></label>
                <select asp-for="Mascotas.Especie" contenteditable="true" class="form-control">
                    <option>Perro</option>
                    <option>Gato</option>
                    <option>Conejo</option>
                    <option>Otros</option>
                </select>
             
            </div>
            <div class="form-group">
                <label asp-for="Mascotas.Código" class="control-label"></label>
                <select asp-for="Mascotas.Código" class="form-control" asp-items="ViewBag.Código"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
             </form>
       
    </div>
</div>
    
<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
