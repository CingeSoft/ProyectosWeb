@model IEnumerable<CingeWeb.Models.Roles>

@{
    ViewData["Title"] = "Index";


    <h2>Mantenimiento Roles</h2>
}
<hr />

<p>
    <a asp-action="Create">Crear Rol</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreRol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreRol)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRol">Modificar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdRol">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdRol">Borrar</a>
                </td>
            </tr>

        }
    </tbody>
</table>
