@model IEnumerable<CingeWeb.Models.TipoArticulos>

@{
    ViewData["Title"] = "Index";
}

<h1 align="center">Mantenimiento de Tipo Artículos</h1>
<hr border-style:inset />
<p>
    <a asp-action="Create">Crear Tipo Artículo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreTipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreTipo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TipoArticulo">Modificar</a> |
                    <a asp-action="Details" asp-route-id="@item.TipoArticulo">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.TipoArticulo">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
