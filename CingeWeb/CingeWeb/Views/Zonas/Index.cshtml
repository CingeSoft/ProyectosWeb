@model IEnumerable<CingeWeb.Models.Zonas>

@{
    ViewData["Title"] = "Index";
}
<h1 align="center">Mantenimiento de Zonas</h1>
<hr border-style:inset />
<p>
    <a asp-action="Create">Crear Zona</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreZona)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreZona)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CódigoZona">Modificar</a> |
                <a asp-action="Details" asp-route-id="@item.CódigoZona">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.CódigoZona">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
